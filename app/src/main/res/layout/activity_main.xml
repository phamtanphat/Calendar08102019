<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewTitle"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#f20"
        android:textSize="40sp"
        android:gravity="center"
        android:text="Lịch trình"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edittextDateStart"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_calendar_start"
        android:hint="Ngày bắt đầu"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edittextDateEnd"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_icon_calendar_end"
        android:hint="Ngày kết thúc"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edittextDateStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#E26451"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        tools:text="Tổng thời gian : 300 ngày"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edittextDateEnd"
        android:id="@+id/textviewDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/textviewDay"
        android:text="Duyệt"
        android:id="@+id/buttonHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>